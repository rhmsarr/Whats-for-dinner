@model Recipe

<form asp-action="UpdateRecipe" method="post">
    
    <input type="hidden" asp-for="RecipeId">
    <input type="hidden" asp-for="UserId">
    <br>
    <div class="row">
        <div class="col-3">
            <h3 class="form-label">Name</h3>

            <input class="form-control" type="text" asp-for="RecipeName">
        </div>
        <div class="col-3">
             <h3 class="form-label">Cook Time</h3>
            <input class="form-control"asp-for="CookTime" type="text">
        </div>
        <div class="col-3">
            <h3 class="form-label">Prep Time</h3>
            <input class="form-control" asp-for="PrepTime" type="text">
        </div>
        <div class="col-3">
            <h3 class="form-label">Servings</h3>
            <input class="form-control" asp-for="Servings" type="text">
        </div>
    </div>
   
    <br><br>
    <h3 class="form-label">Ingredients</h3>
    
    @for(int i = 0; i<Model.Ingredients.Count(); i++){
        <div class="row">
            <div class="col-4">
                <input type="text" class="form-control" asp-for="Ingredients[i].IngredientName">
            </div>
            <div class="col-2"></div>

            <div class="col-6">
                <input type="hidden" name="Ingredients[@i].RecipeId" value="@Model.RecipeId">
                <input type="hidden" asp-for="Ingredients[i].RecipeIngredientId">
                <input type="text" class="form-control" asp-for="Ingredients[i].quantity">
                
            </div>
        </div>
        <br>

    }<br><br><h3>Instructions</h3>
    <br>
    @for(int i = 0; i< Model.RecipeSteps.Count(); i++){
        <div class="row">
            <div class="col-1">
                <h6 style="text-align: right;">@Model.RecipeSteps[i].StepNumber</h6>
            </div><div class="col-11">
                <input type="hidden" asp-for="RecipeSteps[i].StepNumber">
                <input type="hidden" name="RecipeSteps[@i].RecipeId" value="@Model.RecipeId">
                <input type="hidden" asp-for="RecipeSteps[i].RecipeStepId">

                <textarea asp-for="RecipeSteps[i].StepInstruction" class="form-control" rows="3"></textarea>
                
            </div>
        </div>
        <br>

    }
    <button class="btn btn-primary btn-lg" style="float: inline-end;" type="submit"> &nbsp; Save &nbsp;</button>
    <br><br><br>
</form>
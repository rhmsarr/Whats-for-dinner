@model List<Recipe>
<br><br><br>
@foreach(Recipe recipe in Model){
    <div class="recipe card">
        <div class="card-body">
            <div class="row">
                <h3 class="card-title title" >@recipe.RecipeName</h3>
                
                <div class="col-6">
                    <h4 class="Ingredients">Ingredients:</h4>
                    <ul>
                        @foreach(RecipeIngredient ing in recipe.Ingredients){
                            <li class="Ingredients">@ing.IngredientName: @ing.quantity</li>
                        }
                        
                        
                    </ul>
                </div>
                <div class="col-6">
                    <h5 id="prep-time">Prep time: @recipe.PrepTime</h5>
                    <input type="hidden" name="PrepTime" value="@recipe.PrepTime">
                    <h5 id="cook-time"> Cook Time: @recipe.CookTime</h5>
                    <input type="hidden" name="CookTime" value="@recipe.CookTime">
                    <h5 id="servings"> Servings: @recipe.Servings</h5>
                    <input type="hidden" name="Servings" value="@recipe.Servings">
                </div>
            </div>
           
                <a class="btn btn-primary" asp-controller="Recipe" asp-action="MakeRecipe"asp-route-id="@recipe.RecipeId">
                    Make it!
                </a>
                <a class="btn btn-primary" style="float: inline-end" asp-controller="Recipe" asp-action="UpdateRecipe" asp-route-id="@recipe.RecipeId">Update</a>
                <a class="btn btn-primary" style="float: inline-end" asp-asp-controller="Recipe" asp-action="DeleteRecipe" asp-route-id="@recipe.RecipeId">Delete</a>

        </div>
    </div>
    <br><br>
}

